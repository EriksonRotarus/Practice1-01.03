<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="landscape"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="370dp"
        android:layout_height="75dp"
        android:layout_margin="15dp"
        android:layout_marginStart="20dp"

        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button0"
            android:layout_width="161dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:layout_weight="0"
            android:background="@drawable/circle_button"
            android:drawable="@color/gray"
            android:text="  0"
            android:textAlignment="textStart"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button12"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:layout_weight="0"
            android:background="@drawable/ring_button"
            android:color="@color/gray"
            android:text=","
            android:textSize="30dp" />

        <Button
            android:id="@+id/button11"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:layout_weight="0"

            android:background="@drawable/ring_button"
            android:text="="

            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="370dp"

        android:layout_height="75dp"
        android:layout_margin="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_weight="0"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:layout_weight="0"
            android:background="@drawable/ring_button"
            android:color="@color/gray"
            android:text="1"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:layout_weight="0"
            android:background="@drawable/ring_button"
            android:color="@color/gray"
            android:text="2"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:layout_weight="0"
            android:background="@drawable/ring_button"
            android:color="@color/gray"
            android:text="3"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button10"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:layout_weight="0"

            android:background="@drawable/ring_button"
            android:text="+"

            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="370dp"

        android:layout_height="75dp"
        android:layout_margin="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_weight="0"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button111"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:layout_weight="0"
            android:background="@drawable/ring_button"
            android:color="@color/gray"
            android:text="4"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button211"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:layout_weight="0"
            android:background="@drawable/ring_button"
            android:color="@color/gray"
            android:text="5"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button3111"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:layout_weight="0"
            android:background="@drawable/ring_button"
            android:color="@color/gray"
            android:text="6"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button1110"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:layout_weight="0"

            android:background="@drawable/ring_button"

            android:text="—"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="370dp"

        android:layout_height="75dp"
        android:layout_margin="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_weight="0"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button1111"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:layout_weight="0"
            android:background="@drawable/ring_button"
            android:color="@color/gray"
            android:text="7"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button112"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:layout_weight="0"
            android:background="@drawable/ring_button"
            android:color="@color/gray"
            android:text="8"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button311"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:layout_weight="0"
            android:background="@drawable/ring_button"
            android:color="@color/gray"
            android:text="9"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button1011"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:layout_weight="0"

            android:background="@drawable/ring_button"

            android:text="✕"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="370dp"

        android:layout_height="75dp"
        android:layout_margin="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_weight="0"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button11111"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:layout_weight="0"
            android:background="@drawable/ring_button"
            android:color="@color/gray"
            android:text="AC"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button21"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:layout_weight="0"
            android:background="@drawable/ring_button"
            android:color="@color/gray"
            android:text="±"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button31"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:layout_weight="0"
            android:background="@drawable/ring_button"
            android:color="@color/gray"
            android:text="%"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button14"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:layout_weight="0"

            android:background="@drawable/ring_button"

            android:text="÷"
            android:textSize="35dp" />

    </LinearLayout>

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="370dp"
        android:layout_height="75dp"
        android:ems="10"

        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>